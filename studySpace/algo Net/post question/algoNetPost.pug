meta(charset='UTF-8')
meta(http-equiv='X-UA-Compatible' content='IE=edge')
meta(name='viewport' content='width=device-width,initial-scale=1')
title Document
link(rel='stylesheet' href='algoQuestionPost.css')
header
  .first-head
    .logo-filter
      a(href='#')
        | Algo
        span Net
      .filter
        label(for='filter') filter by
        select#filter(name='filter')
          option(value='algoz system') Algoz system
          option(value='Programming language') Programming Language
    .profile
      a(href='#')
        img(src='ppic.jpg' alt)
  .last-head
    a(href='#') Ask a Question
section.qa-section
  .question-cont
    p Post Your Question
    form.post-form(action='#')
      label(for='catagory') Category
      select#category(name='category')
        option(value='Basic Computer Skill') Basic Computer Skill
        option(value='Programming Language') Programming Language
      label(for='title') Title
      input#title(name='title' type='text')
      label(for='question') Question
      textarea#question(name='question' cols='30' rows='10')
      label.photo(for='photo') Upload Image
      input#photo.photo(name='photo' type='file')
      input(name='submit' type='submit' value='Post')
  .popular
    p Top Participants
    .top-users
      a(href='#')
        .pro-cont
          img(src='ppic.jpg' alt)
          h2.name Samson Meseret
          p.role Student
footer